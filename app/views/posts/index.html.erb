<h1>Bienvenue</h1>

<p>
  <%= link_to "Créer un nouveau post", new_post_path %>
</p>

<p>
<% if user_signed_in?%>
  <%= link_to "Se déconnecter", destroy_user_session_path %>
<% else%>
  <%= link_to "Se connecter", new_user_session_path %>
<% end%>
</p>

<% if user_signed_in?%>
  <% @post.each do |post| %><br>
    <%= post.body %>
    <%= post.user.email %>
   
  <% end %>
  <% else%>
    <% @post.each do |post| %><br>
      <%= post.body %>
    <% end %>
<% end %>
